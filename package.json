{
	"name": "element",
	"version": "1.0.0",
	"main": "index.js",
	"repository": "git@github.com:flood-io/element.git",
	"author": "Ivan Vanderbyl <ivanvanderbyl@gmail.com>",
	"contributors": [
		"Lachie Cox <lachie@flood.io>"
	],
	"license": "MIT",
	"private": true,
	"dependencies": {
		"lerna": "2.11.0"
	},
	"prettier": {
		"semi": false,
		"singleQuote": true,
		"trailingComma": "all",
		"printWidth": 100,
		"useTabs": true,
		"tabWidth": 2,
		"bracketSpacing": true,
		"jsxBracketSameLine": true,
		"arrowParens": "avoid"
	},
	"devDependencies": {
		"commonmark": "^0.28.1",
		"doctrine": "^2.0.0",
		"front-matter": "^2.3.0",
		"lodash.camelcase": "^4.3.0",
		"markdown-table": "^1.1.2",
		"markdown-toc": "^1.1.0",
		"nodemon": "^1.18.3",
		"ts-node": "^6.1.1",
		"typedoc": "git://github.com/TypeStrong/typedoc.git",
		"typescript": "^2.9.0",
		"typescript-collections": "^1.2.5",
		"typescript-parser": "^1.3.3"
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build-clean": "rimraf ./packages/*/dist ./packages/*/lib",
		"clean-all": "rimraf ./node_modules && rimraf ./packages/*/node_modules && yarn build-clean",
		"element": "ts-node -- ./packages/cli/index.ts",
		"element:inspect": "node --inspect-brk -r ts-node/register ./packages/cli/index.ts"
	}
}
