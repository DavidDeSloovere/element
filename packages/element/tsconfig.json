{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2017",
		"moduleResolution": "node",
		"inlineSourceMap": true,
		"outDir": "dist",
    "declaration": true,
    "removeComments": false,
		"lib": ["DOM", "DOM.Iterable", "ES2015", "ES7", "ES2017", "ES2016.Array.Include", "ES2017.Object"],
		"pretty": true,
		"rootDir": ".",
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": false,
		"allowUnreachableCode": false,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"types": ["@types/node"],
		"typeRoots": ["node_modules/@types"],
		"emitDecoratorMetadata": true
	},
	"exclude": ["node_modules", "dist", "examples", "*.spec.ts", "*.test.ts"],
	"files": ["./index.ts","./ReporterAPI.ts", "./RuntimeEnvironmentAPI.ts", "./TestScriptAPI.ts", "./expect.ts"]
}
