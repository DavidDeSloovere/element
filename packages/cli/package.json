{
	"name": "@flood/element-cli",
	"version": "1.0.3-3",
	"license": "Apache-2.0",
	"description": "The command line interface for Flood Element",
	"repository": "flood-io/element",
	"bin": {
		"element": "./dist/element.js",
		"create-element-test": "./dist/create.js"
	},
	"private": false,
	"scripts": {
		"build": "tsc --outDir dist --project .",
		"prepublishOnly": "npm run build"
	},
	"dependencies": {
		"chalk": "^2.4.1",
		"debug": "^3.1.0",
		"ora": "^2.1.0",
		"yargs": "^11.0.0"
	},
	"prettier": {
		"semi": false,
		"singleQuote": true,
		"trailingComma": "all",
		"printWidth": 100,
		"useTabs": true,
		"tabWidth": 2,
		"bracketSpacing": true,
		"jsxBracketSameLine": true,
		"arrowParens": "avoid"
	},
	"devDependencies": {
		"@types/chalk": "^2.2.0",
		"@types/node": "^10.3.4",
		"@types/ora": "^1.3.4",
		"@types/yargs": "^11.0.0"
	}
}
